<!DOCTYPE html>
<html>
  <head>
    <title>WorkGithub</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-right bg-warning">
        <div class="container">
          <%= link_to top_path do %>
            <h1>ながのCAKE!</h1>
          <% end %>  
          <div class="navbar-collapse collspace show" id="navbarNavDropdown" style>
            <ul class="nav justify-content-around">
              <% if admin_signed_in? %>
                <li>
                  <%= link_to admin_items_path do %>
                    <button type="button" class="btn btn-outline-info">商品一覧</button>
                  <% end %>
                </li>
                <li>
                  <%= link_to admin_customers_path do %>
                    <button type="button" class="btn btn-outline-info">会員一覧</button>
                  <% end %>
                </li>
                <li>
                  <%= link_to admin_orders_path do %>
                    <button type="button" class="btn btn-outline-info">注文履歴一覧</button>
                  <% end %>
                </li>
                <li>
                  <%= link_to admin_genres_path do %>
                    <button type="button" class="btn btn-outline-info">ジャンル一覧</button>
                  <% end %>
                </li>
                <li>
                  <%= link_to destroy_admin_session_path, method: :delete do %>
                    <button type="button" class="btn btn-outline-danger">ログアウト</button>
                  <% end %>
                </li>
          
              <% elsif customer_signed_in? %>
                <li>
                  <%= link_to show_path(current_customer.id) do %>
                    <button type="button" class="btn btn-outline-info">マイページ</button>
                  <% end %>
                </li>
                <li>
                  <%= link_to items_path do %>
                    <button type="button" class="btn btn-outline-info">商品一覧</button>
                  <% end %>  
                </li>
                <li>
                  <%= link_to cart_items_path do %>
                    <button type="button" class="btn btn-outline-info">カート</button>
                  <% end %>  
                </li>
                <li>
                  <%= link_to destroy_customer_session_path, method: :delete do %>
                    <button type="button" class="btn btn-outline-danger">ログアウト</button>
                  <% end %>  
                </li>
                
              <% else %>
                <li>
                  <%= link_to about_path do %>
                    <button type="button" class="btn btn-outline-info">About</button>
                  <% end %>
                </li>
                <li>
                  <%= link_to admin_items_path do %>
                    <button type="button" class="btn btn-outline-info">商品一覧</button>
                  <% end %>
                </li>
                <li>
                  <%= link_to new_customer_registration_path do %>
                    <button type="button" class="btn btn-outline-secondary">新規登録</button>
                  <% end %>
                </li>
                <li>
                  <%= link_to new_customer_session_path do %>
                    <button type="button" class="btn btn-outline-success">ログイン</button>
                  <% end %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
