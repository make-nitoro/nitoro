<div class="h3 m-5 col-3 bg-info text-black text-center">
    注文履歴画面
</div>

<div class="container">
    <div class="row text-start">
        <table class="table table-bordered">
            <thead class="table-secondary">
                <tr>
                    <th>注文日</th>
                    <th>配達先</th>
                    <th>注文商品</th>
                    <th>支払金額</th>
                    <th>ステータス</th>
                    <th>注文詳細</th>
                </tr>
            </thead>
            <tbody>
            <% @orders.each do |order| %>    
                <tr>
                    <td><%= order.created_at %></td>
                    <td><%= order.address %></td>
                    <td>
                        <% order.order_dateils.each do |order_dateil| %>
                            <%= order_dateil.item.name %><br>
                        <% end %>
                    </td>
                    <td><%= order.all_price %></td>
                    <td><%= order.status %></td>
                    <td>
                        <%= link_to order_path(order.id) do %>
                            <button type="button" class="btn btn-info">表示する</button>
                        <% end %>
                    </td>
                </tr>
            <% end %>    
            </tbody>
        </table>
    </div>
</div>