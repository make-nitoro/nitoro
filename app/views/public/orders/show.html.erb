<div class="h3 m-5 col-3 bg-info text-black text-center">
    注文履歴詳細画面
</div>

<div class="container">
    <div class="row text-start">
        <div class="col-md-7">
            <h4>注文情報</h4>
            <table class="table table-bordered">
                <thead></thead>
                <tbody>
                    <tr>
                        <th class="table-secondary">注文日</th>
                        <td><%= @order.created_at %></td>
                        <th class="table-secondary">配送先</th>
                        <td><%= @order.address %></td>
                        <th class="table-secondary">支払方法</th>
                        <td><%= @order.payment_way_i18n %></td>
                        <th class="table-secondary">ステータス</th>
                        <td></td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="col-md-4 offset-md-1">
            <h4>請求情報</h4>
            <table class="table table-bordered">
                <thead></thead>
                <tbody>
                 
                     <tr>
                        <th class="table-secondary">商品合計</th>
                        <td><%= @order.all_price-@order.postage %></td>
                    </tr>
                    <tr>
                        <th class="table-secondary">配送料</th>
                        <td><%= @order.postage %></td>
                    </tr>
                    <tr>
                        <th class="table-secondary">ご請求金額</th>
                        <td><%= @order.all_price %></td>
                    </tr>
                </tbody>    
            </table>
        </div>    
    </div>
    <div class="row text-start">
        <div class="col-md-10">
            <h4>注文内容</h4>
            <table class="table table-bordered">
                <thead class="table-secondary">
                    <tr>
                        <th>商品名</th>
                        <th>単価（税込）</th>
                        <th>個数</th>
                        <th>小計</th>
                    </tr>
                </thead>
                <tbody>
                    <% @order.order_dateils.each do |order_dateil| %>
                    <tr>
                        <td><%= order_dateil.item.name %></td>
                        <td><%= order_dateil.item.with_tax_price.to_s(:delimited) %></td>
                        <td><%= order_dateil.amount %></td>
                        <td><%= order_dateil.item.with_tax_price * order_dateil.amount %></td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>    
    </div>
</div>