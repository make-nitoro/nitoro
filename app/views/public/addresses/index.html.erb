<div class="h3 m-5 col-3 bg-info text-black text-center">
  配送先登録/一覧
</div>

<div class="col-10">
    <table class="table table-borderless">
        <thead>
            <tr>
                <th scope="col">郵便番号（ハイフンなし）</th>
                <th scope="col">住所</th>
                <th scope="col">宛名</th>
            </tr>
        </thead>
        <tbody>
            <tr>
            <%= form_with model: @address do |f| %>    
                <td><%= f.text_field :postal_code %></td>
                <td><%= f.text_field :address %></td>
                <td scope="row">
                    <%= f.text_field :name %>
                    <input class="btn btn-success" type="submit" value="新規登録">
                </td>
            <% end %>    
            </tr>
        </tbody>
    </table>
</div>
<div class="col-9">
    <table class="table table-bordered">
        <thead>
            <tr class="table-danger">
                <th>郵便番号</th>
                <th>住所</th>
                <th>宛名</th>
                <th colspan="3"></th>
            </tr>
        </thead>
        <tbody>
        <% @addresses.each do |address| %>
            <tr>
                <td><%= address.postal_code %></td>
                <td><%= address.address %></td>
                <td><%= address.name %></td>
                <td class="text-center">
                    <%= link_to edit_address_path(address.id) do %>
                        <input class="btn btn-success" type="submit" value="編集する">
                    <% end %>
                    <%= link_to address_path(address.id), method: :delete do %>
                        <input class="btn btn-danger" type="submit" value="削除する">
                    <% end %>
                </td>
            </tr>
        <% end %> 
        </tbody>
    </table>
</div>